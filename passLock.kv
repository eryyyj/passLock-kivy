LoginPage:

<LoginPage@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "vertical"
            pos_hint: {'x':.3,'y':.50}
            size_hint: .45,.45
            spacing: "12dp"
            Image:
                source: "images/headlogo.png"
                pos_hint: {'x':.01,'y':0}
                size_hint: 1,1
                fit_mode: "scale-down"
            TextInput:
                hint_text: "Enter username here"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                post_hint: {'x':.3,'y':.2}
                spacing: 10
            TextInput:
                hint_text: "Enter password here"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                post_hint: {'x':.3,'y':.2}
                spacing: 10
        BoxLayout:
            orientation: "horizontal"
            pos_hint: {'x':.3,'y':.4}
            size_hint: .45,.45
            Button:
                text: "Login"
                size_hint: .6,None
                height: "30dp"
                font_size: 10
            Button:
                text: "Forgot Password"
                size_hint: .4,None
                height: "30dp"
                font_size: 10

        BoxLayout:
            orientation: "horizontal"
            pos_hint: {'x':.3,'y':.01}
            size_hint: .45,.45
            Label:
                text: "Not a member?"
                size_hint: .4,None
                height: "30dp"
                font_size: 10
            Button:
                text: "Create Account"
                size_hint: .4,None
                height: "30dp"
                font_size: 10

<CreateAccountPage@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "vertical"
            pos_hint: {'x':.3,'y':.10}
            size_hint: .45,.45
            spacing: "20dp"
            Label:
                text: "Register"
                font_size: '50dp'
            BoxLayout:
                size_hint: 1,None
                height: "50dp"
            TextInput:
                hint_text: "Enter username"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Enter Email"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Enter Password"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Confirm Password"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            Button:
                text: "verify"
                size_hint: 1,None
                height: "30dp"
            BoxLayout:
                size_hint: 1,None
                height: "30dp"
            StackLayout:
                orientation: 'lr-tb'
                Button:
                    text: "Create Account"
                    size_hint: .6,None
                    height: "30dp"
                Button:
                    text: "Back To Login"
                    size_hint: .4,None
                    height: "30dp"
<SidebarPage@AnchorLayout>
    id: sidebar
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols:1
            pos_hint: {'center_y':0.5, 'center_x':0.5}
            size_hint: .75,1
            Image:
                source: 'images/headlogo.png'
                fit_mode: "scale-down"
                size_hint: .3,.3
            GridLayout:
                cols:1
                spacing: "5dp"
                size_hint: 1,1
                BoxLayout:
                    size_hint: 1,None
                    height: "10dp"
                Button:
                    text: "All Items"
                    size_hint: .6,None
                    height: "50dp"
                Button:
                    text: "Logins"
                    size_hint: .6,None
                    height: "50dp"
                Button:
                    text: "Personal"
                    size_hint: .6,None
                    height: "50dp"
                Button:
                    text: "History"
                    size_hint: .6,None
                    height: "50dp"
                Button:
                    text: "Trash"
                    size_hint: .5,None
                    height: "50dp"
                MDGridLayout:
                    pos_hint: .5,1
                    rows: 1
                    spacing: "5dp"
                    size_hint: .1,.1
                    pos_hint: {'center_y':0.5, 'center_x':0.5}
                    MDIconButton:
                        icon: "images/block_setting.png"
                        icon_size: "100dp"
                        size_hint: .1,.1
                    MDIconButton:
                        icon: "images/block_tools.png"
                        icon_size: "100dp"
                        size_hint: .1,.1
                    MDIconButton:
                        icon: "images/block_info.png"
                        icon_size: "100dp"
                        size_hint: .1,.1










