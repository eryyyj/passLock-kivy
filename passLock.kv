PasslistPage:

# page for retrieving your account password
<ForgotPasswordPage>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        ForgotPasswordGridLayoutDesign:
            pos_hint: {'center_y':0.5, 'center_x':0.5}
            size_hint: .8,.8

#Grid Layout Design in forgot password page
<ForgotPasswordGridLayoutDesign>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [1,1,1,1]
            Rectangle:
                pos: self.pos
                size: self.size
    GridLayout:
        cols:1
        pos_hint: {'x':.5,'y':.5}
        size_hint: .5,.5
        Label:
            text: "Forgot Password"
            font_size: '20dp'
            color: .2,.5,.7,.7
            size_hint: (1,None)
            markup: True
        TextInput:
            hint_text: "Enter username here"
            singleline:True
            size_hint: 1, None
            height: "30dp"
            spacing: 10
        Button:
            text: "Confirm"
            size_hint: .4,None
            height: "30dp"
        Button:
            text: "Back"
            size_hint: .4,None
            height: "30dp"

#Page for logging in
<LoginPage@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        MDGridLayout:
            cols:1
            pos_hint: {'center_y':0.4, 'center_x':0.5}
            size_hint: .75,1
            GridLayout:
                cols : 1
                pos_hint: {'x':.3,'y':.6}
                size_hint: .45,.45
                spacing: "12dp"
                Image:
                    source: "images/logomain.png"
                    pos_hint: {'x':.01,'y':.4}
                    size_hint: 1,None
                    height: "200dp"
                    fit_mode: "scale-down"
                TextInput:
                    hint_text: "Enter username here"
                    singleline:True
                    size_hint: 1, None
                    height: "30dp"
                    post_hint: {'x':.3,'y':.2}
                    spacing: 10
                TextInput:
                    hint_text: "Enter password here"
                    singleline:True
                    size_hint: 1, None
                    height: "30dp"
                    post_hint: {'x':.3,'y':.2}
                    spacing: 10
                GridLayout:
                    rows: 1
                    pos_hint: {'x':.3,'y':.5}
                    size_hint: (1,None)
                    Button:
                        text: "Login"
                        size_hint: .6,None
                        height: "30dp"
                        font_size: 10
                    Button:
                        text: "Forgot Password"
                        size_hint: .4,None
                        height: "30dp"
                        font_size: 10
                GridLayout:
                    rows: 1
                    pos_hint: {'x':.3,'y':.2}
                    size_hint: .45,.45
                    Label:
                        text: "Not a member?"
                        size_hint: .4,None
                        height: "30dp"
                        font_size: 10
                    Button:
                        text: "Create Account"
                        size_hint: .4,None
                        height: "30dp"
                        font_size: 10

#Page when creating an account is successful
<CreateAccountSuccessfulPage>
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            pos_hint: {'center_y':0.25, 'center_x':0.5}
            cols: 1
            size_hint: 1,1
            Label:
                text: 'Account Creation Successful :)'
                font_size: '20dp'
                size_hint: 1,None
            Button:
                text: 'Back to Login Page'
                size_hint: .5,None
                height: '30dp'


#Page for Account Creation
<CreateAccountPage@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        spacing: "12dp"
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "vertical"
            pos_hint: {'x':.15,'y':.10}
            size_hint: .7,.7
            spacing: "20dp"
            Label:
                text: "Register"
                font_size: '50dp'
            BoxLayout:
                size_hint: 1,None
                height: "50dp"
            TextInput:
                hint_text: "Enter username"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Enter Email"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Enter Password"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            TextInput:
                hint_text: "Confirm Password"
                singleline:True
                size_hint: 1, None
                height: "30dp"
                spacing: 10
            Button:
                text: "verify"
                size_hint: 1,None
                height: "30dp"
                font_size: '10dp'
            BoxLayout:
                size_hint: 1,None
                height: "30dp"
            StackLayout:
                orientation: 'lr-tb'
                Button:
                    text: "Create Account"
                    size_hint: .6,None
                    height: "30dp"
                    font_size: '10dp'
                Button:
                    text: "Back To Login"
                    size_hint: .4,None
                    height: "30dp"
                    font_size: '10dp'

#Sidebar page ito yung page na nakalagay sa navigation drawer
<SidebarPage@AnchorLayout>
    id: sidebar
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols:1
            pos_hint: {'center_y':0.4, 'center_x':0.5}
            size_hint: .75,1
            Image:
                source: 'images/logomain.png'
                fit_mode: "scale-down"
                size_hint: .3,.3
            GridLayout:
                cols:1
                spacing: "5dp"
                size_hint: 1,1
                pos_hint: {'center_y':0.5, 'center_x':0.5}
                BoxLayout:
                    size_hint: 1,None
                    height: "10dp"
                Button:
                    text: "Logout"
                    size_hint: .5,None
                    height: "50dp"
                MDGridLayout:
                    pos_hint: .5,1
                    rows: 1
                    spacing: "5dp"
                    size_hint: .1,.1
                    AnchorLayout:
                        size_hint_y: None
                        height: but1.height
                        MDIconButton:
                            id: but1
                            icon: "images/block_setting.png"
                            icon_size: "50dp"
                    AnchorLayout:
                        size_hint_y: None
                        height: but2.height
                        MDIconButton:
                            id: but2
                            icon: "images/block_tools.png"
                            icon_size: "50dp"
                    AnchorLayout:
                        size_hint_y: None
                        height: but3.height
                        MDIconButton:
                            id: but3
                            icon: "images/block_info.png"
                            icon_size: "50dp"

# Main app page siya pero walang top app bar and navigation drawer
<PasslistPage@MDAnchorLayout>
    anchor_x: "center"
    anchor_y: "center"
    FloatLayout:
        pos_hint: {'center_y':0.5, 'center_x':0.5}
        size_hint: 1,1
        canvas:
            Color:
                rgba: [.2,.5,.7,.7]
            Rectangle:
                pos: self.pos
                size: self.size
        MDGridLayout:
            cols: 1
            MDGridLayout:
                rows: 1
                adaptive_height: True
                padding: "30dp"
                MDIconButton:
                    icon: 'magnify'
                MDTextField:
                    id: search_field
                    hint_text: 'Search for credentials'
                MDIconButton:
                    icon: 'account-filter'
            passList:
            FloatLayout:
                size_hint_y: None
                height: 0
                MDFloatingActionButton:
                    id: float_button
                    icon: "account-plus"
                    md_bg_color: app.theme_cls.primary_color
                    pos_hint: {"center_x": .90, "y": 1}
                    padding: "10dp"

#Credentials list recycle view
<passList@RecycleView>
    viewclass: 'MDFlatButton'
    key_size: 'height'
    RecycleBoxLayout:
        padding: dp(10)
        default_size: None, dp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'



#Main App Page with Tool bar or top app bar
<ToolbarMainAppPage>
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'PassLock'
            left_action_items: [["menu",lambda x: nav_drawer.toggle_nav_drawer()]]
        PasslistPage:


#Main App page with navigation drawer
<MainAppPage>
    MDNavigationLayout:
        ScreenManager:
            Screen:
                PasslistPage:
        MDNavigationDrawer:
            padding: 0
            ScrollView:
                size_hint: 1,1
                SidebarPage:
                    size_hint: 1,None
                    height: 600











